import javax.websocket.server.ServerEndpoint;

import java.util.logging.Logger;

import org.glassfish.tyrus.server.Server;

import utility.FaceData;
 
/** 
 * @ServerEndpoint gives the relative name for the end point
 * This will be accessed via ws://localhost:8080/EchoChamber/echo
 * Where "localhost" is the address of the host,
 * "EchoChamber" is the name of the package
 * and "echo" is the address to access this class from the server
 */
@ServerEndpoint(value = "/faces") 
public class FaceServer {

    private Logger logger = Logger.getLogger(this.getClass().getName());

	private ServerGui observer;
	private Gson gson;
    private Session session;
    private Server server;

    public static void main(String[] args) throws Exception {
        FaceServer f = new FaceServer("localhost", 8025);
        f.start();
        while (true) {
            BufferedReader reader = new BufferedReader(new InputStreamReader(System.in));
            System.out.print("Please press a key to stop the server.");
            reader.readLine();
            FaceData fd = new FaceData();
            f.put(fd);
        }
        // f.stop();
    }

    public FaceServer(String host, int port) {
        this.server = new Server(host, port, "/ws", null, FaceServer.class);
        this.gson = new GsonBuilder().create();
    }

    public void start() {
        try {
            this.server.start();    
        } catch (Exception e) {
            e.printStackTrace();
        }
        
    }

    public void stop() {
        try {
            this.server.stop();    
        } catch (Exception e) {
            e.printStackTrace();
        }
        
    }

    public void put(FaceData faceData) {
        try {
            String response = gson.toJson(faceData, FaceData.class);
            this.session.getBasicRemote().sendText(response);
        } catch (IOException e) {
            e.printStackTrace();
        }
    }

